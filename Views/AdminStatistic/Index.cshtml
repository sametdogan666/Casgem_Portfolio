
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_PortfolioAdminLayout.cshtml";
}

<h2>İstatistik Sayfası</h2>

<div class="card text-white bg-primary mb-3" style="width: 100%;">

    <div class="card-body">
        <h5 class="card-title" style="color: aliceblue">Toplam Personel Sayısı: @ViewBag.employeeCount</h5>
    </div>
</div>
<div class="card text-white bg-secondary mb-3" style="width: 100%;">
    <div class="card-body">
        <h5 class="card-title" style="color: aliceblue">En Yüksek Maaşlı Personel: @ViewBag.maxSalaryEmployee</h5>
    </div>
</div>
<div class="card text-white bg-success mb-3" style="width: 100%;">
    <div class="card-body">
        <h5 class="card-title" style="color: aliceblue">Toplam Şehir Sayısı: @ViewBag.totalCityCount</h5>
    </div>
</div>
<div class="card text-white bg-danger mb-3" style="width: 100%;">
    <div class="card-body">
        <h5 class="card-title" style="color: aliceblue"> Ortalama Personel Maaşları: @ViewBag.avgEmployeeSalary</h5>
    </div>
</div>
<div class="card text-white bg-primary mb-3" style="width: 100%;">
    <div class="card-body">
        <h5 class="card-title" style="color: aliceblue">Yazılım Departmanında Çalışan Personel Sayısı: @ViewBag.countSoftwareDepartment</h5>
    </div>
</div>
<div class="card text-white bg-secondary mb-3" style="width: 100%;">

    <div class="card-body">
        <h5 class="card-title" style="color: aliceblue">Ankara veya Adana'daki Toplam Personel Maaşı: @ViewBag.cityAnkaraOrAdanaSumSalary</h5>
    </div>
</div>

<div class="card text-white bg-success mb-3" style="width: 100%;">
    <div class="card-body">
        <h5 class="card-title" style="color: aliceblue">Ankara'da Çalışan Yazılım Personellerinin Toplam Maaşı: @ViewBag.sumSalaryFromSoftwareDepartment</h5>
    </div>
</div>