@model Casgem_Portfolio.Models.Entities.TblAchievement

@{
    ViewBag.Title = "UpdateAchievement";
    Layout = "~/Views/Shared/_PortfolioAdminLayout.cshtml";
}

<h2>Başarı Güncelleme Sayfası</h2>

<form method="post">
    @Html.HiddenFor(achievement => achievement.Id)

    
    <label>Başlık</label>
    @Html.TextBoxFor(achievement => achievement.Title, new { @class = "form-control" })
    <br />
    <label>Açıklama</label>
    @Html.TextBoxFor(achievement => achievement.Description, new { @class = "form-control" })
    <br />
    <label>Ad Soyad</label>
    @Html.TextBoxFor(achievement => achievement.Achievement1, new { @class = "form-control" })
    <br />
    <label>Yaş</label>
    @Html.TextBoxFor(achievement => achievement.Achievement2, new { @class = "form-control" })
    <br />
    <label>Şehir</label>
    @Html.TextBoxFor(achievement => achievement.Achievement3, new { @class = "form-control" })
    <br />
    <label>Email</label>
    @Html.TextBoxFor(achievement => achievement.Achievement4, new { @class = "form-control" })
    <br />

    <button class="btn btn-success">Verileri Güncelle</button>
    <a href="/AdminAboutPageAchievement/Index/" class="btn btn-warning">Değişikliklerden Vazgeç</a>
</form>

