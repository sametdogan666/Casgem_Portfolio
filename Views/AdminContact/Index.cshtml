@model List<Casgem_Portfolio.Models.Entities.TblContact>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_PortfolioAdminLayout.cshtml";
}

<h2>Iletişim Bilgileri</h2>

<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Telefon Numarası</th>
        <th>Emai</th>
        <th>Adres</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.ContactID</td>
            <td>@item.PhoneNumber</td>
            <td>@item.Email</td>
            <td>@item.Location</td>
            <td><a href="/AdminContact/DeleteContact/@item.ContactID" class="btn btn-outline-danger">Sil</a></td>
            <td><a href="/AdminContact/UpdateContact/@item.ContactID" class="btn btn-outline-success">Güncelle</a></td>
        </tr>
    }
</table>
@if (ViewBag.countContact == 0)
{
    <a href="/AdminContact/AddContact/" class="btn btn-outline-primary">Yeni Firma Bilgisi Ekle</a>
}


