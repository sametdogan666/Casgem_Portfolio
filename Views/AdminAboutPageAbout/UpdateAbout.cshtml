@model Casgem_Portfolio.Models.Entities.TblAboutDetail

@{
    ViewBag.Title = "UpdateAbout";
    Layout = "~/Views/Shared/_PortfolioAdminLayout.cshtml";
}

<h2>Hakkımda Güncelleme Sayfası</h2>

<form method="post">
    @Html.HiddenFor(project => project.Id)

    <label>Küçük Başlık</label>
    @Html.TextBoxFor(project => project.SmallTitle, new { @class = "form-control" })
    <br />
    <label>Başlık</label>
    @Html.TextBoxFor(project => project.Title, new { @class = "form-control" })
    <br />
    <label>Açıklama</label>
    @Html.TextBoxFor(project => project.Description, new { @class = "form-control" })
    <br />
    <label>Ad Soyad</label>
    @Html.TextBoxFor(project => project.Name, new { @class = "form-control" })
    <br />
    <label>Yaş</label>
    @Html.TextBoxFor(project => project.Age, new { @class = "form-control" })
    <br />
    <label>Şehir</label>
    @Html.TextBoxFor(project => project.City, new { @class = "form-control" })
    <br />
    <label>Email</label>
    @Html.TextBoxFor(project => project.Email, new { @class = "form-control" })
    <br />
    <label>Fotoğraf Yolu</label>
    @Html.TextBoxFor(project => project.ImageUrl, new { @class = "form-control" })
    <br />
    <label>Github Linki</label>
    @Html.TextBoxFor(project => project.GithubUrl, new { @class = "form-control" })
    <br />
    <label>İnstagram Linki</label>
    @Html.TextBoxFor(project => project.InstagramUrl, new { @class = "form-control" })
    <br />
    <label>Linkedin Linki</label>
    @Html.TextBoxFor(project => project.LinkedinUrl, new { @class = "form-control" })
    <br />
    <label>CV Linki</label>
    @Html.TextBoxFor(project => project.CvUrl, new { @class = "form-control" })
    <br />

    <button class="btn btn-success">Verileri Güncelle</button>
    <a href="/AdminAboutPageAbout/Index/" class="btn btn-warning">Değişikliklerden Vazgeç</a>
</form>


