
@{
    ViewBag.Title = "AddAbout";
    Layout = "~/Views/Shared/_PortfolioAdminLayout.cshtml";
}

<h2>Yeni Hakkımda Yazısı Ekleme Sayfası</h2>

<form method="post">
    <label>Küçük Başlık</label>
    <input type="text" class="form-control" name="SmallTitle" />
    <br />
    <label>Başlık</label>
    <input type="text" class="form-control" name="Title" />
    <br />
    <label>Açıklama</label>
    <input type="text" class="form-control" name="Description" />
    <br />
    <label>Ad Soyad</label>
    <input type="text" class="form-control" name="Name" />
    <br />
    <label>Yaş</label>
    <input type="text" class="form-control" name="Age" />
    <br />
    <label>Şehir</label>
    <input type="text" class="form-control" name="City" />
    <br />
    <label>Email</label>
    <input type="text" class="form-control" name="Email" />
    <br />
    <label>Resim Yolu</label>
    <input type="text" class="form-control" name="ImageUrl" />
    <br />
    <label>Github Linki</label>
    <input type="text" class="form-control" name="GithubUrl" />
    <br />
    <label>İnstagram Linki</label>
    <input type="text" class="form-control" name="InstagramUrl" />
    <br />
    <label>Linkedin Linki</label>
    <input type="text" class="form-control" name="LinkedinUrl" />
    <br />
    <label>CV Linki</label>
    <input type="text" class="form-control" name="CvUrl" />
    <br />
    <button class="btn btn-info">Hakkımda Yazısını Ekle</button>
</form>


