@model List<Casgem_Portfolio.Models.Entities.TblReference>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_PortfolioAdminLayout.cshtml";
}

<h2>Referans Listesi</h2>

<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Ad Soyad</th>
        <th>Memleket</th>
        <th>Düşünceler</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.ReferenceID</td>
            <td>@item.NameSurname</td>
            <td>@item.Hometown</td>
            <td>@item.Thoughts</td>
            <td><a href="/Reference/DeleteReference/@item.ReferenceID" class="btn btn-outline-danger">Sil</a></td>
            <td><a href="/Reference/UpdateReference/@item.ReferenceID" class="btn btn-outline-success">Güncelle</a></td>
        </tr>
    }
</table>
<a href="/Reference/AddReference" class="btn btn-outline-primary">Yeni Referans Girişi</a>

