@model Casgem_Portfolio.Models.Entities.TblService

@{
    ViewBag.Title = "UpdateService";
    Layout = "~/Views/Shared/_PortfolioAdminLayout.cshtml";
}

<h2>Hizmet Güncelleme Sayfası</h2>

<form method="post">
    @Html.HiddenFor(service => service.ServiceID)

    <label>Hizmet Başlığı</label>
    @Html.TextBoxFor(service => service.ServiceTitle, new { @class = "form-control" })
    <br />
    <label>Hizmet İkonu</label>
    @Html.TextBoxFor(service => service.ServiceIcon, new { @class = "form-control" })
    <br />
    <label>Hizmet Servis Numarası</label>
    @Html.TextBoxFor(service => service.ServiceNumber, new { @class = "form-control" })
    <br />
    <label>Hizmet İçeriği</label>
    @Html.TextBoxFor(service => service.ServiceContent, new { @class = "form-control" })
    <br />

    <button class="btn btn-success">Verileri Güncelle</button>
    <a href="/Service/" class="btn btn-warning">Değişikliklerden Vazgeç</a>
</form>

